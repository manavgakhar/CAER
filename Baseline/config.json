{
    "name": "ResNet_Session",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet",
        "args": {
            "path": "/content/drive/My Drive/Experiment/ijba_res18_naive.pth.tar",
            "fine_tune": false,
            "drop_out": true
        }
    },
    "train_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/content/CAER-S/train",
            "detect_file": "/content/train.txt",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.125,
            "num_workers": 2
        }
    },
    "test_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/content/CAER-S/test",
            "detect_file": "/content/test.txt",
            "shuffle": false,
            "batch_size": 32,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "/content/drive/My Drive/Experiment/saved",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 5,

        "tensorboard": false
    }
}
