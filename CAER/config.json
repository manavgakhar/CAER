{
    "name": "CAERS_correct_session",
    "n_gpu": 1,
    "arch": {
        "type": "CAERSNet",
        "args": {
            "use_context": true,
            "use_face": true,
            "context_attention": true,
            "fusion_attention": true
        }
    },
    "train_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/content/CAER-master/CAER/data/CAER-S/train",
            "detect_file": "/content/CAER-master/CAER/data/train.txt",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "val_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/content/CAER-master/CAER/data/CAER-S/test",
            "detect_file": "/content/CAER-master/CAER/data/val.txt",
            "train": false,
            "batch_size": 32,
            "shuffle": false,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 60,
        "save_dir": "/content/drive/My Drive/Experiment/saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": 20,
        "tensorboard": true
    }
}
