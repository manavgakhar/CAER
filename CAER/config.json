{
    "name": "CAERS_resnet_session",
    "n_gpu": 1,
    "arch": {
        "type": "CAERSNet",
        "args": {
            "fine_tune": false, 
            "path": "/content/ijba_res18_naive.pth"
        }
    },
    "train_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/content/CAER-S/train",
            "detect_file": "/content/train.txt",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "val_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/content/CAER-S/test",
            "detect_file": "/content/val.txt",
            "train": false,
            "batch_size": 32,
            "shuffle": false,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-4
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.2
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "/content/drive/My Drive/Experiment/saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": 20,
        "tensorboard": false
    }
}
