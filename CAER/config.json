{
    "name": "CAERS_debug_session",
    "n_gpu": 1,
    "arch": {
        "type": "CAERSNet",
        "args": {
            "context": true,
            "context_attention": true,
            "fusion_attention": true
        }
    },
    "train_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/media/ndkhanh/01D4AEE761F372D0/Download/data/CAER-S/train", 
            "detect_file": "data/debug_train.txt",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "val_loader": {
        "type": "CAERSDataLoader",
        "args":{
            "root": "/media/ndkhanh/01D4AEE761F372D0/Download/data/CAER-S/train", 
            "detect_file": "data/debug_val.txt",
            "train": false,
            "batch_size": 32,
            "shuffle": false,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 4,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
