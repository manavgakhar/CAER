{
    "name": "CAERSNetFull",
    "n_gpu": 1,
    "arch": {
        "type": "CAERSNet",
        "args": {
            "context": true,
            "context_attention": true,
            "fusion_attention": true
        }
    },
    "train_loader": {
        "root": "/content/drive/My Drive/FEG/CAER-S/train", 
        "test_size": 0.125,
        "batch_size": 32,
        "num_workers": 2,
        "mode": 0
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 4,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "tensorboard": true
    },
    "test_loader": {
        "root": "/content/drive/My Drive/FEG/CAER-S/test",
        "batch_size": 32,
        "num_workers": 2,
        "mode": 0
    }
}
